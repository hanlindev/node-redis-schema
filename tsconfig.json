{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "noImplicitAny": true,
    "strictNullChecks": true,
    "moduleResolution": "node",
    "outDir": "./lib",
    "skipLibCheck": true,
    "declaration": true,
    "watch": false
  },
  "include": [
    "./src/**/*.ts",
    "./test/**/*.ts"
  ],
  "compileOnSave": true
}